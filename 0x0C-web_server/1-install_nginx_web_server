#!/usr/bin/env bash
# Install and configure Nginx web server on Ubuntu

# Update package list and install Nginx
apt-get update -y
apt-get install -y nginx

# Start Nginx (it usually starts automatically, but this ensures it's running)
service nginx start

# Configure Nginx to listen on port 80
sed -i 's/listen 80 default_server;/listen 80;/g' /etc/nginx/sites-available/default

# Restart Nginx (avoiding systemctl)
service nginx restart

# Create a sample index.html file with "Hello World!"
echo "Hello World!" > /var/www/html/index.html

# Check if Nginx is running and serving the expected content
curl -sI 127.0.0.1 | grep "HTTP/1.1 200 OK"

# Output success message
echo "Nginx installed and configured successfully!"
